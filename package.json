{
  "name": "git-chat-server",
  "version": "1.0.0",
  "repository": "git@github.com:flyin/git-chat-example.git",
  "author": "flyin <alex@alex-web.ru>",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "start": "pm2-docker process.yml",
    "start:dev": "nodemon -e js --watch ./ --exec node server.js",
    "test": "jest --coverage --forceExit --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bcrypt": "^1.0.2",
    "dotenv": "^4.0.0",
    "github": "^9.2.0",
    "graphql": "^0.10.3",
    "graphql-server-koa": "^0.9.0",
    "graphql-subscriptions": "^0.4.3",
    "graphql-tools": "^1.0.0",
    "jsonwebtoken": "^7.4.1",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.0",
    "koa-router": "^7.2.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "mongoose": "^4.10.8",
    "subscriptions-transport-ws": "^0.7.3",
    "validator": "^7.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "eslint": "^4.0.0",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "nodemon": "^1.11.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "graphql/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "\\.(test|spec)\\.js$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/utils/test-setup.js",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.js$"
  }
}

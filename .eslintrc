{
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "Promise": true
  },
  "env": {
    "node": true,
    "jest": true
  },
  "resolve": {
    "moduleDirectory": ["node_modules", "app"]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "new-cap": 0,
    "global-require": 0,
    "max-len": [1, 140, 2],
    "no-duplicate-imports": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "comma-dangle": 0,
    "sort-keys": 2
  }
}
